<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@null"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#fff"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="Model"
                    android:id="@+id/name"
                    android:paddingHorizontal="8dp"

                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="Power"
                    android:id="@+id/power"
                    android:paddingHorizontal="8dp"

                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="Visit Date"
                    android:id="@+id/visitDate"
                    android:paddingHorizontal="8dp"

                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invisibleLayout"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingHorizontal="8dp"
                    android:text="Machine Model"
                    android:id="@+id/machineModeltxt"
                    android:gravity="center|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingHorizontal="8dp"
                    android:text="Power(KW)"
                    android:id="@+id/powertxt"
                    android:gravity="center|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/machineModel"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingHorizontal="8dp"
                    android:text="Visit Date"
                    android:gravity="center|start"
                    android:id="@+id/visitDatetxt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/power"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingHorizontal="8dp"
                    android:text="Next Visit Date"
                    android:id="@+id/nextVisitDatetxt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center|start"
                    app:layout_constraintTop_toBottomOf="@id/visitDate"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:id="@+id/titleView">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Name"
                        android:paddingHorizontal="16dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Brand"
                        android:paddingHorizontal="8dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Part Number"

                        android:paddingHorizontal="8dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/partRecyclerView"
                    app:layoutManager=".ui.WrapContentLinearLayoutManager"
                    tools:listitem="@layout/single_part_model"
                    app:layout_constraintTop_toBottomOf="@id/nextVisitDate"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"/>








            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>